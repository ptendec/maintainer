generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RefreshToken {
  id      Int      @id @default(autoincrement())
  userId  Int
  user    User     @relation(fields: [userId], references: [id])
  token   String   @unique
  expires DateTime
}

model User {
  id           Int            @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String         @unique()
  password     String
  Diet         Diet[]
  Program      Program[]
  telegramUser TelegramUser?
  RefreshToken RefreshToken[]
}

model TelegramUser {
  id       String  @id
  userId   Int     @unique
  chatId   String  @unique
  username String?
  language String?
  user     User    @relation(fields: [userId], references: [id])
}

model ExerciseType {
  id        Int        @id @default(autoincrement())
  name      String
  bodyParts BodyPart[]
}

model BodyPart {
  id             Int          @id @default(autoincrement())
  name           String
  link           String?
  exerciseTypeId Int
  exerciseType   ExerciseType @relation(fields: [exerciseTypeId], references: [id])
  videos         Video[]
}

model Video {
  id         Int      @id @default(autoincrement())
  link       String
  bodyPartId Int
  bodyPart   BodyPart @relation(fields: [bodyPartId], references: [id])
}

model Diet {
  id     Int    @id @default(autoincrement())
  name   String
  dishes Dish[]
  userId Int
  user   User   @relation(fields: [userId], references: [id])
}

model Dish {
  id            Int       @id @default(autoincrement())
  name          String?
  recipe        String?
  proteins      Float?
  carbohydrates Float?
  fats          Float?
  calories      Float?
  dietId        Int
  diet          Diet      @relation(fields: [dietId], references: [id])
  schedule      Schedule?
}

model Schedule {
  id     Int     @id @default(autoincrement())
  week   Int?
  time   String?
  dishId Int     @unique
  dish   Dish    @relation(fields: [dishId], references: [id], onDelete: Cascade)
}

model Program {
  id     Int    @id @default(autoincrement())
  name   String
  days   Day[]
  User   User?  @relation(fields: [userId], references: [id])
  userId Int?
}

model Day {
  id        Int     @id @default(autoincrement())
  name      String
  programId Int
  program   Program @relation(fields: [programId], references: [id])
  stages    Stage[]
}

model Stage {
  id        Int        @id @default(autoincrement())
  name      String
  dayId     Int
  day       Day        @relation(fields: [dayId], references: [id])
  exercises Exercise[]
  order     Int
}

model ExerciseVideo {
  id         Int      @id @default(autoincrement())
  path       String
  name       String
  exerciseId Int
  exercise   Exercise @relation(fields: [exerciseId], references: [id])
}

model Exercise {
  id            Int             @id @default(autoincrement())
  name          String
  remark        String?
  warning       String?
  video         String?
  sets          Int?
  repeats       Int?
  stageId       Int
  order         Int
  stage         Stage           @relation(fields: [stageId], references: [id])
  ExerciseVideo ExerciseVideo[]
}

